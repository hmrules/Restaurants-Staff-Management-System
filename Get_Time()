#include<iostream>
#include<ctime>
using namespace std;

Void Get_Time()
{

   time_t timetoday;
   time (&timetoday);
   cout << "Calendar date and time as per todays is : "<< asctime(localtime(&timetoday));
   return 0;
   
}




